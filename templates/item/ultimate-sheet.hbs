<form class="hunter sheet item ultimate">
    <header class="sheet-header">
        <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" alt="{{item.name}}" />
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="绝技名称" /></h1>
    </header>

    <div class="sheet-body">
        <div class="form-group">
            <label>类型</label>
            <input type="text" name="system.type" value="{{system.type}}" placeholder="绝技类型" />
        </div>

        <div class="form-group">
            <label>对应魂魄</label>
            <input type="text" name="system.soul" value="{{system.soul}}" placeholder="对应的魂魄" />
        </div>

        <div class="form-group">
            <label>效果</label>
            <textarea name="system.effects" rows="4" placeholder="绝技的效果描述">{{system.effects}}</textarea>
        </div>

        <div class="form-group">
            <label>绝技描述</label>
            <textarea name="system.description" rows="6" placeholder="绝技的详细描述">{{system.description}}</textarea>
        </div>
    </div>
</form>
